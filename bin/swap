#!/usr/bin/env python

"""Very simple script to swap the names of two files."""

import click


def swap(first, second):
    with open(first, 'r') as f1, open(second, 'r') as f2:
        file1 = f1.read()
        file2 = f2.read()
    with open(first, 'w+') as f1, open(second, 'w+') as f2:
        f1.write(file2)
        f2.write(file1)


@click.command()
@click.argument('files', nargs=2)
def main(files):
    swap(*files)


if __name__ == '__main__':
    main()
